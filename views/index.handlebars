<img src="/assets/img/burger.png">
<h1>Eat Da Burger!!!</h1>
<container class="menu"></container>
<h2 class="available">Burgers Available</h2>
<ul>
    {{#each burgers}}
    {{#unless devoured}}
    {{> burgers/burger-block devoured=true}}
    {{/unless}}
    {{/each}}
</ul>
</container>

<container class="enjoyed">
    <h2 class="devoured">Burgers Devoured</h2>

    <ul>
        {{#each burgers}}
        {{#if devoured}}
        <ul>
        {{burger_name}}
        </ul>
        {{!-- {{> burgers/burger-block devoured=false}} --}}
        {{/if}}
        {{/each}}
    </ul>
</container>

<br>
<h2>Add Your Own Burger To Enjoy!</h2>
<form class="create-form">
    <div class="form-group">
        <label for="bg">Burger Name:</label>
        <input type="text" id="bg" name="burger_name">
    </div>
    <button type="submit">Submit</button>
    <h5>Enter a Burger you want to eat, click the "Submit" button</h5>
</form>